.int-body {
  height: 100vh;
  width: 100%;
  background:
  linear-gradient(
  rgba(0, 0, 0, 0.3),
  rgba(0, 0, 0, 0.3)
  ),
  url(<%= asset_path('photo-1473777584131-937735dc793a.jpg') %>);
  background-size: cover;
  position: relative;

}

.int-cta {
  color: white;
  letter-spacing: 1.2px;
}

.int-logo {
  width: 150px;
  position: absolute;
  top: 100px;
  left: 100px;
}

.int-login {
  position: absolute;
  top: 110px;
  right: 200px;
  border: 3px solid white;
  padding: 3px 25px;

}

.int-main-container {
  max-width: 600px;
  margin: 0 auto;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  height: 100%;
}

.int-btns {
  display: flex;
}

.int-btn-1 {
  border: 3px solid white;
  color: white;
  padding: 10px 25px;
  margin: 5px;
}

.int-btn-2 {
  border: 3px solid white;
  padding: 10px 25px;
  margin: 5px;
}

.int-btn-2 a {
  text-decoration: none;
  color: white;
}

.mouse {
  position: absolute;
  width: 22px;
  height: 42px;
  bottom: 40px;
  left: 50%;
  margin-left: -12px;
  border-radius: 15px;
  border: 2px solid white;
  -webkit-animation: intro 1s;
  animation: intro 1s;
}

.scroll {
  display: block;
  width: 3px;
  height: 3px;
  margin: 6px auto;
  border-radius: 4px;
  background: white;
  -webkit-animation: finger 1s infinite;
  animation: finger 1s infinite;
}
@-webkit-keyframes intro {
  0% {
    opacity: 0;
    -webkit-transform: translateY(40px);
    transform: translateY(40px);
  }
  100% {
    opacity: 1;
    -webkit-transform: translateY(0);
    transform: translateY(0);
  }
}
@keyframes intro {
  0% {
    opacity: 0;
    -webkit-transform: translateY(40px);
    transform: translateY(40px);
  }
  100% {
    opacity: 1;
    -webkit-transform: translateY(0);
    transform: translateY(0);
  }
}
@-webkit-keyframes finger {
  0% {
    opacity: 1;
  }
  100% {
    opacity: 0;
    -webkit-transform: translateY(20px);
    transform: translateY(20px);
  }
}
@keyframes finger {
  0% {
    opacity: 1;
  }
  100% {
    opacity: 0;
    -webkit-transform: translateY(20px);
    transform: translateY(20px);
  }
}
