<!DOCTYPE html>
<html>
  <head>
    <title>Cubicle</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>

    <script src="//maps.google.com/maps/api/js?key=AIzaSyAM8OlzB6fHkGMazggxdrzT9mHeg-PTmWA"></script>
    <script src="//cdn.rawgit.com/mahnunchik/markerclustererplus/master/dist/markerclusterer.min.js"></script>
    <script src='//cdn.rawgit.com/printercu/google-maps-utility-library-v3-read-only/master/infobox/src/infobox_packed.js' type='text/javascript'></script>


  </head>

  <body>
    <div class="main-container">
      <nav>
        <div class="nav-content">
          <span class = "navbar-text">
         <% if user_signed_in? %>
           <li class="nav-item"><span id = "welcome-message" class = "<%= current_user.id  %>"> Signed in as <%= link_to "#{current_user.email}", user_path(current_user) %></span></li>
           <li class="nav-item"><span id = "log-out-button"><%= link_to "Log out", destroy_user_session_path, :method => :delete %></span></li>
         <% else %>
           <li class="nav-item"><span id = "log-in-button"><%= link_to "Log In", new_user_session_path %></span></li>
           <li class="nav-item"><span id = "sign-up-button"><%= link_to "Sign Up", new_user_registration_path %></span></li>
         <% end %>
        </span>
        </div>
      <p class="notice"><%= notice %></p>
      <p class="alert"><%= alert %></p>
    <div class="width-control">
      <div class="header-container">
      <a href="/spaces">
    <img id="logo" src="/images/logo.svg" alt="">
    </a>
    </div>
    <%= yield %>
    </div>
  </div>
  </body>
</html>
