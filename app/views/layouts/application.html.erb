<!DOCTYPE html>
<html>
  <head>
    <title>Cubicle</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
      <p class="notice"><%= notice %></p>
      <p class="alert"><%= alert %></p>
        <span class = "navbar-text">
       <% if user_signed_in? %>
         <span id = "welcome-message" class = "<%= current_user.id  %>"> Signed in as <%= link_to "#{current_user.email}", user_path(current_user) %></span> |
         <span id = "log-out-button"><%= link_to "Log out", destroy_user_session_path, :method => :delete %></span>
       <% else %>
         <span id = "log-in-button"><%= link_to "Log In", new_user_session_path %></span> |
         <span id = "sign-up-button"><%= link_to "Sign Up", new_user_registration_path %></span>
       <% end %>
      </span>
    <%= yield %>
  </body>
</html>
