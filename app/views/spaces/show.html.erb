<div class="space-details-container">
<br><h3><%= "#{@space.name}" %></h3>
<p><%= "#{@space.description}" %></p>

<div class = "desks-requested"></div>

<h4><%= "Desks Available: #{@remaining_desks}" %></h4>
<div class="price_each_desk" value="<%= @price_per_desk %>">
<span id='price'>Price per desk: $<%= @price_per_desk %>0 / month</span>
</div>

<div class="total-price">Your total: $<%= @price_per_desk %>0 / month</div>
<br>

<% unless !current_user || @space.user.id == current_user.id%>
  <%= link_to 'Request Reserved Space', new_space_lease_path(@space), remote: true%>
<% end %>
<div id="new-lease-form"></div>
<p class="notice"><%= notice %></p>
</div>


<div class="map-container">
  <div id="map" style='width: 100%; height: 400px;'></div>
</div>


<script type="text/javascript">
handler = Gmaps.build('Google');
handler.buildMap({ provider: {}, internal: {id: 'map'}}, function(){
markers = handler.addMarkers(<%=raw @hash.to_json %>);
handler.bounds.extendWith(markers);
handler.fitMapToBounds();
handler.getMap().setZoom(16);
});

</script>
