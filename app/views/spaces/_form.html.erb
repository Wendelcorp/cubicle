<%= form_for @space do |f| %>
  <% if @space.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@space.errors.count, "error") %> prohibited this space from being saved:</h2>

      <ul>
      <% @space.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name %><br/>
    <%= f.text_field :name %>
  </div>

  <div class="field">
    <%= f.label :description %><br/>
    <%= f.text_area :description %>
  </div>

  <div class="field">
    <%= f.label :available_desks %><br/>
    <%= f.number_field :available_desks %>
  </div>

  <div class="field">
    <%= f.label 'Price per desk' %><br/>
    <%= f.number_field :price %>
  </div>

    <div id = 'address'>
    <h2>Address:</h2>
      <%= f.fields_for :addresses, @address do |address_fields| %>
      <div class = "field">
        <%= address_fields.label :number %><br/>
        <%= address_fields.number_field :number %>
      </div>
            <div class = "field">
        <%= address_fields.label "Street Name" %><br/>
        <%= address_fields.text_field :street_name %>
      </div>
            <div class = "field">
        <%= address_fields.label :city %><br/>
        <%= address_fields.text_field :city %>
      </div>
      <div class = "field">
        <%= address_fields.label :province %><br/>
        <%= address_fields.text_field :province %>
      </div>
      <div class = "field">
        <%= address_fields.label "postal code" %><br/>
        <%= address_fields.text_field :postal_code %>
      </div>

      <% end %>
    </div>



  <%= f.submit 'Save' %>

<% end %>










