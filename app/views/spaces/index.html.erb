<%# collection_select(:city, :user_id, @spaces,  :id, :description, {:prompt => true}) %>
<div class = "index-page">
<div class="sort-tools">
  <h2>I'm looking for:</h2>
  <div class="dropdown">
  <select id="number-of-desks">
  <% for i in (1..30) %>
  <% if i == 1  %>
  <option value="<%= i %>"><%= "#{i} Desk "%></option>
  <% else %>
  <option value="<%= i %>"><%= "#{i} Desks "%></option>
  <% end %>
  <% end %>
  </select>
  </div>
  <div id="in" class="dropdown">
    <h2>in</h2>
  </div>
  <div class="dropdown">
    <select id="city">
      <option value="all">All Cities</option>
      <option value="toronto">Toronto</option>
      <option value="montreal">Montreal</option>
      <option value="vancouver">Vancouver</option>
    </select>
  </div>
</div>

<div class="results-container">
  <div id="search-results">
    <div class="space-info">
      <% @spaces.each_with_index do |space,val| %>
        <div class="space-box" id = "<%= val %>" >
          <p class="space-price">$<%= '%.2f' % space.price %></p>
        <%= link_to space_path(space), class: 'show-btn', id: "link1" do %>
        <div class="front-page-img-container" id = "<%= val %>" >
            <%= image_tag space.images.first.location_picture.url(:original), class: 'front-page-img' if space.images.first  %>
            <% end %>
        </div>
          <%# space.name %>
          <%# link_to "spaces show page", space_path(space) %><br>
        </div>
      <% end %>
    </div>
  </div>
</div>
</div>
<%= link_to "add a new space", new_space_path %>
