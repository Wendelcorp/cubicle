$('#new-lease-form').html("<%= j (render 'new') %>");
$('#new-lease-form').slideDown(350);

$('select#lease_desks.confirm-desks').val(String(localStorage.desks));


var hasBeenChanged = false;
   $('#new-lease-form').delegate("#lease_desks", "change", function(event){
     hasBeenChanged = true;
 });

 if (hasBeenChanged) {
  //  var desks = $(this).val();
   var desks = $('#lease_desks').text();
   var price = $('span#pricenumber').text();
   $('span#total-price-value').text(desks * price );
 } else {
    var loadDesks = (String(localStorage.desks));
    var price = $('span#pricenumber').text();
    var total = parseFloat(Math.round((loadDesks * price) * 100) / 100).toFixed(2)
   $('span#total-price-value').text(total);
 }

$('.back-to-description').click(function(event){
  event.preventDefault();
  $('.new_lease').toggle();
  $('.new-lease').toggle();
  $('.toggle-info').toggle();
})
