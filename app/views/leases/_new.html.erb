<%= form_for [@space, @lease], remote: true do |f| %>
  <% if @lease.errors.any? %>
    <div id="error_explanation">
      <h2> Oops, looks like you missed something</h2>
    </div>
  <% end %>
  <button class ='back-to-description'>Back to Description</button>
<div class = "lease-info">
  <div class="field">
    <%= f.label 'Confirm number of desks' %>
    <%= f.select :desks, (1..20), {}, class: 'confirm-desks' %>
  </div>
    <div class="field">
    <%= f.label 'Select potential start month' %>
    <%= f.select :month, @months.each_with_index.map{|name, index| [name,index + 1]} %>
    
  </div>
  <div class = "description" >
    <div class="field">
      <%= f.text_area :description, rows: 5, cols: 40, placeholder: 'Tell us why you want this space' %>
  </div>
    <div class="actions">
    <%= f.submit class: 'save' %>
  </div>
  <% end %>
    
  </div>
</div>


